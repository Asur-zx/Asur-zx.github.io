{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
        "@components/*" : ["src/components/*"],
        "@libs/*"       : ["src/libs/*"],
        "@layouts/*"       : ["src/layouts/*"],
        "@styles/*"     : ["src/styles/*"],
        "@public/*"     : ["public/*"],
        "@data/*"       : ["src/data/*"],
        "@scripts/*"    : ["src/scripts/*"],
    },
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true
}
}
